<div class="content-padding">
  <%= form_for @collection do |f| %>
    <div class="col-lg-6 mx-auto">
      <div class="form-group">
        <%= f.label "Name", class: "stat" %>
        <%= f.text_field :name, required: "true", minlength: 2, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Description", class: "stat" %>
        <%= f.text_area :description, class: "form-control", rows: "4" %>
      </div>
    </div>

    <div class="row">
      <div class="col-6 col-md-3 image">
        <%= f.label "Illustration #1:" %><br>
        <%= f.file_field :illustration01 %><br>
        <%= image_tag(@collection.illustration01.url, class: "img-fluid img-thumbnail") if @collection.illustration01? %>
      </div>
      <div class="col-6 col-md-3 image">
        <%= f.label "Illustration #2:" %><br>
        <%= f.file_field :illustration02 %><br>
        <%= image_tag(@collection.illustration02.url, class: "img-fluid img-thumbnail") if @collection.illustration02? %>
      </div>
      <div class="col-6 col-md-3 image">
