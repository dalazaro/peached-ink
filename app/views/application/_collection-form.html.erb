      </div>
      <div class="col-6 col-md-3 image">
        <%= f.label "Illustration #4:" %><br>
        <%= f.file_field :illustration04 %><br>
        <%= image_tag(@collection.illustration04.url, class: "img-fluid img-thumbnail") if @collection.illustration04? %>
      </div>
      <div class="col-6 col-md-3 image">
        <%= f.label "Illustration #5:" %><br>
        <%= f.file_field :illustration05 %><br>
        <%= image_tag(@collection.illustration05.url, class: "img-fluid img-thumbnail") if @collection.illustration05? %>
      </div>
      <div class="col-6 col-md-3 image">
        <%= f.label "Illustration #6:" %><br>
        <%= f.file_field :illustration06 %><br>
        <%= image_tag(@collection.illustration06.url, class: "img-fluid img-thumbnail") if @collection.illustration06? %>
