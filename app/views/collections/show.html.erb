<% user = current_user %>
<% is_owner = user ? user.id == @collection.user_id : false %>

<h1><%= @collection.name %></h1>
<h2><%= (@collection.description).gsub("\r\n", "<br>").html_safe %></h2><br>
<%= image_tag(@collection.illustration01.url, :width=>200) if @collection.illustration01? %><br>
<%= image_tag(@collection.illustration02.url, :width=>200) if @collection.illustration02? %><br>
<%= image_tag(@collection.illustration03.url, :width=>200) if @collection.illustration03? %><br>
<%= image_tag(@collection.illustration04.url, :width=>200) if @collection.illustration04? %><br>
<%= image_tag(@collection.illustration05.url, :width=>200) if @collection.illustration05? %><br>
<%= image_tag(@collection.illustration06.url, :width=>200) if @collection.illustration06? %><br>
<%= image_tag(@collection.illustration07.url, :width=>200) if @collection.illustration07? %><br>
<%= image_tag(@collection.illustration08.url, :width=>200) if @collection.illustration08? %><br>
<%= image_tag(@collection.illustration09.url, :width=>200) if @collection.illustration09? %><br>
<%= image_tag(@collection.illustration10.url, :width=>200) if @collection.illustration10? %><br>

<% if is_owner %>
  <%= button_to "Edit", edit_collection_path(@collection), method: :get %><br>
  <%= button_to "Delete", "/collections/#{@collection.id}", method: :delete %>
<% end %>

<%= link_to "Back to Collections", collections_path %>
